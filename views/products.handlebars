<h1>Listado de Productos</h1>
<h2>Los productos disponibles son:</h2>
<div class="tableContainer">
  <table class="productTable">
    <th>ID</th>
    <th>Nombre</th>
    <th>Descripción</th>
    <th>Código</th>
    <th>Precio</th>
    <th>Stock</th>
    <th>Categoría</th>
    {{#each payload}}
      <tr>
        <td>{{this._id}}</td>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>{{this.code}}</td>
        <td>{{this.price}}</td>
        <td>{{this.stock}}</td>
        <td>{{this.category}}</td>
        <td><button onclick="addToCart('{{this._id}}')">Añadir al carrito</button></td>
      </tr>
    {{/each}}
  </table>
  <br />
  <div>
    {{#if hasPrevPage}}
      <a
        href="{{prevLink}}&limit={{limit}}&availability={{availability}}&category={{category}}&sort={{sort}}"
      >← Anterior</a>
    {{/if}}
    &nbsp;
    {{this.page}}
    &nbsp;
    {{#if hasNextPage}}
      <a
        href="{{nextLink}}&limit={{limit}}&availability={{availability}}&category={{category}}&sort={{sort}}"
      >Siguiente →</a>
    {{/if}}
  </div>
</div>
<script src="/js/products.js"></script>